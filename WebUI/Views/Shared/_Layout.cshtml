<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css">

    <script src="~/Scripts/jquery-3.5.1.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/nav.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>


    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="HGparent">
        <header class="HGheader">

            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

                <div class="container-fluid">
                    
                    <a class="navbar-brand" href="/">
                        <i class="bi bi-shield-fill" style="color: orangered"></i>
                        <text class="logo" style="color: orangered">Ticket Manager</text>
                    </a>
                    
                    
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>


                    <div class="collapse navbar-collapse" id="navbarNav" style="justify-content: flex-end;">
                        <ul class="navbar-nav ">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    @Html.ActionLink("Profile", "ShowProfile", "User", new { }, new { @class = "nav-link nav-btn" })
                                </li>
                                
                                <li class="nav-item">
                                    @Html.ActionLink("View Cart", "ShowCart", "Cart", new { }, new { @class = "nav-link nav-btn" })
                                </li>

                                <li class="nav-item">
                                    @Html.ActionLink("Log Out", "LogOut", "Account", new { }, new { @class = "nav-link nav-btn" })
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    @Html.ActionLink("Login", "Login", "Account", new { }, new {@class= "nav-link nav-btn" })
                                </li>

                                <li class="nav-item">
                                    @Html.ActionLink("Sign Up", "SignUp", "Account", new { }, new { @class = "nav-link nav-btn" })
                                </li>
                            }
                        </ul>
                    </div>

                </div>
            </nav>

        </header>

        <div class="HGleft">

        </div>

        <div class="HGmain">
            @RenderBody()
        </div>

        <div class="HGright">
            <div id="NotificationCenter"></div>
        </div>
    </div>

</body>
</html>