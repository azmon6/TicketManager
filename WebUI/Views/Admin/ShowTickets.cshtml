@model TicketManager.WebUI.Models.TicketShowModel

@{
    ViewBag.Title = "ShowTickets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered table-condensed table-striped">

    <thead>
        <tr>
            <th>TicketName</th>
            <th>Description</th>
            <th>Organizer</th>
            <th>StartBuyTime</th>
            <th>EndBuyTime</th>
            <th>EventTime</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tick in Model.Tickets )
        {
            <tr>
                <td>@tick.TicketName</td>
                <td>@tick.Description</td>
                <td>@tick.Organizer</td>
                <td>@tick.StartBuyTime</td>
                <td>@tick.EndBuyTime</td>
                <td>@tick.EventTime</td>
                <td>@tick.Price</td>
                <td>@Html.ActionLink("Buy Ticket", "BuyTicket", "Cart", new { tickID = tick.TicketID }, null)</td>
                @if (this.User.IsInRole("Admin"))
                {
                    <td>@Html.ActionLink("Edit", "ModifyTicket", new { tickID = tick.TicketID })</td>
                    <td>@Html.ActionLink("Delete", "DeleteTicket", new { tickID = tick.TicketID })</td>
                }
            </tr>
        }
    </tbody>

</table>

<div>
    @for(int i=1; i<=Model.TotalPages; i++)
    {
        <div style="float:left;margin: 0 5px 0 5px">@i</div>
    }
</div>

<div>
    @Html.ActionLink("Add Ticket", "Create", "Admin")
</div>

