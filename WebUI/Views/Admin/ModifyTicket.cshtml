@model TicketManager.WebUI.Models.ModifyTicketModel

@{
    ViewBag.Title = "ModifyTicket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["TicketModifiedError"] != null)
{
    <div>
        @TempData["TicketModifiedError"]
    </div>
}

<div>
    @using (Html.BeginForm("ModifyTicket", "Admin", FormMethod.Post))
    {
        @Html.HiddenFor(p => p.TicketID)
        @Html.HiddenFor(p => p.RowVersion)
        @Html.ValidationSummary()
        <div>
            <label>
                Ticket Name
            </label>
            @Html.TextBoxFor(p => p.TicketName)
        </div>
        <div>
            <label>
                Organizer
            </label>
            @Html.TextBoxFor(p => p.Organizer)
        </div>
        <div>
            <label>
                Description
            </label>
            @Html.TextBoxFor(p => p.Description)
        </div>
        <div>
            <label>
                Ticket Price
            </label>
            @Html.TextBoxFor(p => p.Price)
        </div>

        <div>
            <label>
                Amount Remaining
            </label>
            @Html.TextBoxFor(p => p.AmountRemaining, new { type = "number" })
        </div>

        //TODO JS FORMAT CHANGE
        <div>
            <label>
                Ticket Event Time
            </label>
            @Html.TextBoxFor(p => p.TimeOfEvent, Model.TimeOfEvent.ToString("yyyy-MM-ddTHH:mm"), new { type = "datetime-local" })
        </div>

        <div>
            <label>
                Start of Buy Time
            </label>
            @Html.TextBoxFor(p => p.StartingDateAvailable, Model.StartingDateAvailable.ToString("yyyy-MM-ddTHH:mm"), new { type = "datetime-local" })
        </div>

        <div>
            <label>
                End of Buy Time
            </label>
            @Html.TextBoxFor(p => p.EndDateAvailable, Model.EndDateAvailable.ToString("yyyy-MM-ddTHH:mm"), new { type = "datetime-local" })
        </div>



        <div>
            <input type="submit" value="Save" />
        </div>

    }
</div>

